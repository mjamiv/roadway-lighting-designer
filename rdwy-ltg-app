                        <div id="check2" class="px-3 py-1.5 rounded-lg text-xs font-medium flex items-center gap-2 transition-all">
                            <span class="text-slate-400">E<sub>min</sub> ≥</span>
                            <span id="checkReq2" class="text-slate-500">--</span>
                            <span class="text-slate-600">→</span>
                            <span id="checkVal2" class="font-bold tabular-nums">--</span>
                            <span id="checkIcon2" class="text-sm">⏳</span>
                        </div>
                        <div id="check3" class="px-3 py-1.5 rounded-lg text-xs font-medium flex items-center gap-2 transition-all">
                            <span class="text-slate-400">U₀ ≥</span>
                            <span id="checkReq3" class="text-slate-500">--</span>
                            <span class="text-slate-600">→</span>
                            <span id="checkVal3" class="font-bold tabular-nums">--</span>
                            <span id="checkIcon3" class="text-sm">⏳</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // IES RP-8 Standards in foot-candles (fc)
        const standards = {
            M1: { eavg: 1.4, emin: 0.6, u0: 0.40, name: 'Freeway' },
            M2: { eavg: 1.2, emin: 0.5, u0: 0.40, name: 'Expressway' },
            M3: { eavg: 0.9, emin: 0.4, u0: 0.40, name: 'Arterial' },
            M4: { eavg: 0.6, emin: 0.3, u0: 0.40, name: 'Collector' },
            M5: { eavg: 0.4, emin: 0.2, u0: 0.35, name: 'Local' }
        };

        const canvas = document.getElementById('canvas3d');
        const ctx = canvas.getContext('2d');

        // Road segments (in feet)
        let segments = [
            { type: 'straight', length: 200, gradeIn: 0, gradeOut: 0 },
            { type: 'curve', length: 130, radius: 260, direction: 'right', gradeIn: 0, gradeOut: 2 },
            { type: 'straight', length: 165, gradeIn: 2, gradeOut: 2 },
            { type: 'curve', length: 115, radius: 330, direction: 'left', gradeIn: 2, gradeOut: 0 },
            { type: 'straight', length: 200, gradeIn: 0, gradeOut: 0 }
        ];
        let selectedSegment = 0;

        // View state
        let view = { rotX: 0.5, rotY: 0.4, zoom: 2.5, panX: 0, panY: 0 };

        // Mouse/touch state
        let isDragging = false;
        let lastMouse = { x: 0, y: 0 };
        let isShiftKey = false;

        // Cache
        let cache = { roadPath: null, poles: null, grid: null, params: null };
        
        // Optimization state
        let isOptimizing = false;

        function buildRoadPath(segments, resolution = 2) {
            const path = [];
            let x = 0, y = 0, z = 0, angle = 0;
            
            for (const seg of segments) {
                const steps = Math.ceil(seg.length / resolution);
                const stepLen = seg.length / steps;
                
                for (let i = 0; i <= steps; i++) {
                    const t = i / steps;
                    const grade = seg.gradeIn + (seg.gradeOut - seg.gradeIn) * t;
                    const dz = (stepLen * grade / 100);
                    
                    if (i > 0) {
                        if (seg.type === 'curve') {
                            const arcLen = stepLen;
                            const dAngle = arcLen / seg.radius * (seg.direction === 'left' ? 1 : -1);
                            angle += dAngle;
                        }
                        x += Math.cos(angle) * stepLen;
                        y += Math.sin(angle) * stepLen;
                        z += dz;
                    }
                    
                    if (i < steps || seg === segments[segments.length - 1]) {
                        path.push({ x, y, z, angle, segIndex: segments.indexOf(seg), t });
                    }
                }
            }
            return path;
        }

        function getPerpendicularOffset(path, idx, offset, params) {
            const p = path[idx];
            const perpAngle = p.angle + Math.PI / 2;
            // Calculate crown (parabolic cross-slope from center)
            const halfWidth = params ? params.roadWidth / 2 : 20;
            const crownPct = params ? params.crown : 2;
            const normalizedOffset = offset / halfWidth; // -1 to 1
            const crownDrop = Math.abs(normalizedOffset) * (halfWidth * crownPct / 100);
            return {
                x: p.x + Math.cos(perpAngle) * offset,
                y: p.y + Math.sin(perpAngle) * offset,
                z: p.z - crownDrop
            };
        }

        function toIso(x, y, z) {
            const cosY = Math.cos(view.rotY);
            const sinY = Math.sin(view.rotY);
            const cosX = Math.cos(view.rotX);
            const sinX = Math.sin(view.rotX);

            const rx = x * cosY - y * sinY;
            const ry = x * sinY + y * cosY;
            const rz = z;

            const projX = rx * view.zoom;
            const projY = (ry * sinX - rz * cosX) * view.zoom;

            return {
                x: projX + canvas.width / 2 + view.panX,
                y: projY + canvas.height / 2 + view.panY,
                depth: ry * cosX + rz * sinX
            };
        }

        function getParams() {
            return {
                roadWidth: +document.getElementById('roadWidth').value,
                lanes: +document.getElementById('lanes').value,
                roadClass: document.getElementById('roadClass').value,
                crown: +document.getElementById('crown').value,
                poleSpacing: +document.getElementById('poleSpacing').value,
                mountHeight: +document.getElementById('mountHeight').value,
                armLength: +document.getElementById('armLength').value,
                arrangement: document.getElementById('arrangement').value,
                lumens: +document.getElementById('lumens').value,
                beamAngle: +document.getElementById('beamAngle').value,
                maintenanceFactor: +document.getElementById('maintenanceFactor').value,
                showMesh: document.getElementById('showMesh').checked,
                showPoles: document.getElementById('showPoles').checked,
                showLightCones: document.getElementById('showLightCones').checked,
                showGrid: document.getElementById('showGrid').checked,
                meshScale: +document.getElementById('meshScale').value / 100
            };
        }

        function setParams(params) {
            if (params.poleSpacing !== undefined) document.getElementById('poleSpacing').value = params.poleSpacing;
            if (params.mountHeight !== undefined) document.getElementById('mountHeight').value = params.mountHeight;
            if (params.armLength !== undefined) document.getElementById('armLength').value = params.armLength;
            if (params.lumens !== undefined) document.getElementById('lumens').value = params.lumens;
            if (params.arrangement !== undefined) document.getElementById('arrangement').value = params.arrangement;
            if (params.beamAngle !== undefined) document.getElementById('beamAngle').value = params.beamAngle;
        }

        function getPoles(roadPath, params) {
            const poles = [];
            const totalLen = segments.reduce((s, seg) => s + seg.length, 0);
            let poleIndex = 0;
            
            for (let dist = 0; dist <= totalLen; dist += params.poleSpacing) {
                let pathIdx = 0;
                let runningDist = 0;
                
                for (let i = 1; i < roadPath.length; i++) {
                    const dx = roadPath[i].x - roadPath[i-1].x;
                    const dy = roadPath[i].y - roadPath[i-1].y;
                    const segDist = Math.sqrt(dx*dx + dy*dy);
                    if (runningDist + segDist >= dist) {
                        pathIdx = i;
                        break;
                    }
                    runningDist += segDist;
                    pathIdx = i;
                }
                
                const p = roadPath[Math.min(pathIdx, roadPath.length - 1)];
                const perpAngle = p.angle + Math.PI / 2;
                
                if (params.arrangement === 'single') {
                    poles.push({
                        x: p.x + Math.cos(perpAngle) * (-params.roadWidth/2 - params.armLength),
                        y: p.y + Math.sin(perpAngle) * (-params.roadWidth/2 - params.armLength),
                        z: p.z,
                        lightX: p.x + Math.cos(perpAngle) * (-params.roadWidth/2),
                        lightY: p.y + Math.sin(perpAngle) * (-params.roadWidth/2),
                        angle: p.angle
                    });
                } else if (params.arrangement === 'staggered') {
                    const side = poleIndex % 2 === 0 ? -1 : 1;
                    poles.push({
                        x: p.x + Math.cos(perpAngle) * (side * (params.roadWidth/2 + params.armLength)),
                        y: p.y + Math.sin(perpAngle) * (side * (params.roadWidth/2 + params.armLength)),
                        z: p.z,
                        lightX: p.x + Math.cos(perpAngle) * (side * params.roadWidth/2),
                        lightY: p.y + Math.sin(perpAngle) * (side * params.roadWidth/2),
                        angle: p.angle
                    });
                } else if (params.arrangement === 'opposite') {
                    poles.push({
                        x: p.x + Math.cos(perpAngle) * (-params.roadWidth/2 - params.armLength),
                        y: p.y + Math.sin(perpAngle) * (-params.roadWidth/2 - params.armLength),
                        z: p.z,
                        lightX: p.x + Math.cos(perpAngle) * (-params.roadWidth/2),
                        lightY: p.y + Math.sin(perpAngle) * (-params.roadWidth/2),
                        angle: p.angle
                    });
                    poles.push({
                        x: p.x + Math.cos(perpAngle) * (params.roadWidth/2 + params.armLength),
                        y: p.y + Math.sin(perpAngle) * (params.roadWidth/2 + params.armLength),
                        z: p.z,
                        lightX: p.x + Math.cos(perpAngle) * (params.roadWidth/2),
                        lightY: p.y + Math.sin(perpAngle) * (params.roadWidth/2),
                        angle: p.angle
                    });
                }
                poleIndex++;
            }
            return poles;
        }

        function calcIlluminance(px, py, pz, poles, params) {
            let total = 0;
            for (const pole of poles) {
                const dx = px - pole.lightX;
                const dy = py - pole.lightY;
                const dist = Math.sqrt(dx * dx + dy * dy);
                const h = params.mountHeight;
                const totalDist = Math.sqrt(dist * dist + h * h);
                const cosTheta = h / totalDist;
                const theta = Math.acos(Math.min(1, cosTheta)) * 180 / Math.PI;
                if (theta > params.beamAngle / 2 + 30) continue;
                const intensity = params.lumens * params.maintenanceFactor / (4 * Math.PI);
                let illum = intensity * Math.pow(cosTheta, 3) / (h * h);
                illum *= Math.pow(Math.cos(theta * Math.PI / 180), 2);
                if (theta > params.beamAngle / 2) {
                    illum *= Math.max(0, 1 - (theta - params.beamAngle / 2) / 30);
                }
                total += illum;
            }
            return total;
        }

        function calcGrid(roadPath, params, poles) {
            const grid = [];
            const resAcross = 32; // Higher resolution for smoother mesh
            
            for (let i = 0; i < roadPath.length - 1; i++) {
                const row = [];
                for (let j = 0; j <= resAcross; j++) {
                    const offset = (j / resAcross - 0.5) * params.roadWidth;
                    const pt = getPerpendicularOffset(roadPath, i, offset, params);
                    const lux = calcIlluminance(pt.x, pt.y, pt.z, poles, params);
                    row.push({ x: pt.x, y: pt.y, z: pt.z, lux });
                }
                grid.push(row);
            }
            return grid;
        }

        function luxToColor(lux, maxLux) {
            const t = Math.min(1, lux / Math.max(maxLux, 1));
            let r, g, b;
            if (t < 0.2) {
                const u = t / 0.2;
                r = 15; g = 25 + u * 60; b = 80 + u * 60;
            } else if (t < 0.4) {
                const u = (t - 0.2) / 0.2;
                r = 15 + u * 10; g = 85 + u * 80; b = 140 - u * 40;
            } else if (t < 0.6) {
                const u = (t - 0.4) / 0.2;
                r = 25 + u * 80; g = 165 + u * 35; b = 100 - u * 60;
            } else if (t < 0.8) {
                const u = (t - 0.6) / 0.2;
                r = 105 + u * 120; g = 200 - u * 20; b = 40 - u * 20;
            } else {
                const u = (t - 0.8) / 0.2;
                r = 225 + u * 30; g = 180 + u * 40; b = 20 + u * 30;
            }
            return { r: Math.round(r), g: Math.round(g), b: Math.round(b) };
        }

        function draw() {
            const { roadPath, poles, grid, params } = cache;
            if (!roadPath || !grid || !params) return;

            ctx.clearRect(0, 0, canvas.width, canvas.height);

            const maxLux = Math.max(...grid.flat().map(p => p.lux), 1);
            const hScale = params.meshScale * params.mountHeight * 0.8;

            let cx = 0, cy = 0;
            roadPath.forEach(p => { cx += p.x; cy += p.y; });
            cx /= roadPath.length;
            cy /= roadPath.length;

            const meshQuads = [];
            const roadQuads = [];

            for (let i = 0; i < grid.length - 1; i++) {
                for (let j = 0; j < grid[i].length - 1; j++) {
                    const p00 = grid[i][j], p10 = grid[i][j+1];
                    const p01 = grid[i+1][j], p11 = grid[i+1][j+1];
                    const avgLux = (p00.lux + p10.lux + p01.lux + p11.lux) / 4;
                    
                    const roadPts = [p00, p10, p11, p01].map(p => toIso(p.x - cx, p.y - cy, p.z));
                    const roadCenterDepth = (roadPts[0].depth + roadPts[2].depth) / 2;
                    roadQuads.push({ pts: roadPts, depth: roadCenterDepth, lux: avgLux });
                    
                    if (params.showMesh) {
                        const meshPts = [p00, p10, p11, p01].map(p => {
                            const h = (p.lux / maxLux) * hScale;
                            return { ...toIso(p.x - cx, p.y - cy, p.z + h), lux: p.lux };
                        });
                        const meshCenterDepth = (meshPts[0].depth + meshPts[2].depth) / 2;
                        
                        const v1x = meshPts[1].x - meshPts[0].x;
                        const v1y = meshPts[1].y - meshPts[0].y;
                        const v2x = meshPts[3].x - meshPts[0].x;
                        const v2y = meshPts[3].y - meshPts[0].y;
                        const normalZ = v1x * v2y - v1y * v2x;
                        const facing = normalZ > 0 ? 1 : 0.6;
                        
                        meshQuads.push({ pts: meshPts, depth: meshCenterDepth, lux: avgLux, maxLux, facing, i, j });
                    }
                }
            }

            roadQuads.sort((a, b) => b.depth - a.depth);
            
            for (const quad of roadQuads) {
                // Shade based on depth for 3D effect
                const depthFactor = Math.max(0.4, Math.min(1, 0.6 + quad.depth * 0.001));
                const baseColor = Math.round(15 * depthFactor);
                const blueColor = Math.round(26 * depthFactor);
                ctx.fillStyle = `rgb(${baseColor}, ${Math.round(baseColor * 1.5)}, ${blueColor})`;
                ctx.beginPath();
                ctx.moveTo(quad.pts[0].x, quad.pts[0].y);
                quad.pts.slice(1).forEach(p => ctx.lineTo(p.x, p.y));
                ctx.closePath();
                ctx.fill();
                
                // Subtle grid on road surface
                ctx.strokeStyle = 'rgba(50, 70, 100, 0.15)';
                ctx.lineWidth = 0.5;
                ctx.stroke();
            }

            if (params.showLightCones) {
                // Sort poles by depth for proper rendering
                const sortedConesPolls = [...poles].map(pole => ({
                    ...pole,
                    depth: toIso(pole.lightX - cx, pole.lightY - cy, pole.z).depth
                })).sort((a, b) => b.depth - a.depth);
                
                for (const pole of sortedConesPolls) {
                    const pTop = toIso(pole.lightX - cx, pole.lightY - cy, pole.z + params.mountHeight);
                    const coneR = params.mountHeight * 1.2; // Larger cone spread
                    const beamRad = (params.beamAngle / 2) * Math.PI / 180;
                    const coneBaseR = Math.tan(beamRad) * params.mountHeight;
                    
                    // Draw multiple cone layers for better visibility
                    for (let layer = 3; layer >= 0; layer--) {
                        const layerR = coneR * (0.4 + layer * 0.2);
                        const alpha = 0.08 + layer * 0.04;
                        
                        ctx.beginPath();
                        ctx.moveTo(pTop.x, pTop.y);
                        
                        // Create cone shape with more points for smoothness
                        const conePoints = [];
                        for (let a = 0; a <= 24; a++) {
                            const angle = (a / 24) * Math.PI * 2;
                            const cp = toIso(
                                pole.lightX - cx + Math.cos(angle) * layerR,
                                pole.lightY - cy + Math.sin(angle) * layerR * 0.6,
                                pole.z - (params.crown * params.roadWidth / 200) // Account for crown
                            );
                            conePoints.push(cp);
                            ctx.lineTo(cp.x, cp.y);
                        }
                        ctx.closePath();
                        
                        // Create gradient from light source
                        const grad = ctx.createRadialGradient(
                            pTop.x, pTop.y, 0,
                            pTop.x, pTop.y + layerR * view.zoom * 0.7, layerR * view.zoom
                        );
                        
                        if (layer === 0) {
                            // Innermost - bright core
                            grad.addColorStop(0, `rgba(255, 250, 200, ${alpha * 2})`);
                            grad.addColorStop(0.3, `rgba(255, 230, 140, ${alpha * 1.5})`);
                            grad.addColorStop(0.7, `rgba(255, 200, 80, ${alpha})`);
                            grad.addColorStop(1, 'rgba(255, 180, 50, 0)');
                        } else {
                            grad.addColorStop(0, `rgba(255, 220, 120, ${alpha})`);
                            grad.addColorStop(0.5, `rgba(255, 190, 70, ${alpha * 0.5})`);
                            grad.addColorStop(1, 'rgba(255, 160, 30, 0)');
                        }
                        
                        ctx.fillStyle = grad;
                        ctx.fill();
                    }
                    
                    // Draw light beam lines for additional visibility
                    ctx.strokeStyle = 'rgba(255, 230, 150, 0.15)';
                    ctx.lineWidth = 1;
                    for (let a = 0; a < 8; a++) {
                        const angle = (a / 8) * Math.PI * 2;
                        const cp = toIso(
                            pole.lightX - cx + Math.cos(angle) * coneR * 0.8,
                            pole.lightY - cy + Math.sin(angle) * coneR * 0.5,
                            pole.z
                        );
                        ctx.beginPath();
                        ctx.moveTo(pTop.x, pTop.y);
                        ctx.lineTo(cp.x, cp.y);
                        ctx.stroke();
                    }
                    
                    // Ground illumination patch
                    ctx.beginPath();
                    for (let a = 0; a <= 24; a++) {
                        const angle = (a / 24) * Math.PI * 2;
                        const cp = toIso(
                            pole.lightX - cx + Math.cos(angle) * coneR * 0.7,
                            pole.lightY - cy + Math.sin(angle) * coneR * 0.5,
                            pole.z - (params.crown * params.roadWidth / 200)
                        );
                        if (a === 0) ctx.moveTo(cp.x, cp.y);
                        else ctx.lineTo(cp.x, cp.y);
                    }
                    ctx.closePath();
                    
                    const groundGrad = ctx.createRadialGradient(
                        toIso(pole.lightX - cx, pole.lightY - cy, pole.z).x,
                        toIso(pole.lightX - cx, pole.lightY - cy, pole.z).y,
                        0,
                        toIso(pole.lightX - cx, pole.lightY - cy, pole.z).x,
                        toIso(pole.lightX - cx, pole.lightY - cy, pole.z).y,
                        coneR * view.zoom * 0.5
                    );
                    groundGrad.addColorStop(0, 'rgba(255, 240, 180, 0.25)');
                    groundGrad.addColorStop(0.5, 'rgba(255, 210, 100, 0.12)');
                    groundGrad.addColorStop(1, 'rgba(255, 180, 50, 0)');
                    ctx.fillStyle = groundGrad;
                    ctx.fill();
                }
            }

            if (params.showMesh) {
                meshQuads.sort((a, b) => b.depth - a.depth);
                
                for (const quad of meshQuads) {
                    const color = luxToColor(quad.lux, quad.maxLux);
                    const brightness = 0.7 + quad.facing * 0.3;
                    const r = Math.round(color.r * brightness);
                    const g = Math.round(color.g * brightness);
                    const b = Math.round(color.b * brightness);
                    
                    ctx.fillStyle = `rgb(${r}, ${g}, ${b})`;
                    ctx.beginPath();
                    ctx.moveTo(quad.pts[0].x, quad.pts[0].y);
                    quad.pts.slice(1).forEach(p => ctx.lineTo(p.x, p.y));
                    ctx.closePath();
                    ctx.fill();
                    
                    if (params.showGrid) {
                        ctx.strokeStyle = `rgba(255, 255, 255, 0.1)`;
                        ctx.lineWidth = 0.5;
                        ctx.stroke();
                    }
                }
                
                ctx.strokeStyle = 'rgba(0, 0, 0, 0.4)';
                ctx.lineWidth = 1;
                
                ctx.beginPath();
                for (let i = 0; i < grid.length; i++) {
                    const p = grid[i][0];
                    const h = (p.lux / maxLux) * hScale;
                    const pt = toIso(p.x - cx, p.y - cy, p.z + h);
                    if (i === 0) ctx.moveTo(pt.x, pt.y);
                    else ctx.lineTo(pt.x, pt.y);
                }
                ctx.stroke();
                
                ctx.beginPath();
                for (let i = 0; i < grid.length; i++) {
                    const p = grid[i][grid[i].length - 1];
                    const h = (p.lux / maxLux) * hScale;
                    const pt = toIso(p.x - cx, p.y - cy, p.z + h);
                    if (i === 0) ctx.moveTo(pt.x, pt.y);
                    else ctx.lineTo(pt.x, pt.y);
                }
                ctx.stroke();
            }

            if (params.showPoles) {
                const sortedPoles = [...poles].map(pole => ({
                    ...pole,
                    depth: toIso(pole.x - cx, pole.y - cy, pole.z).depth
                })).sort((a, b) => b.depth - a.depth);
                
                for (const pole of sortedPoles) {
                    const pBase = toIso(pole.x - cx, pole.y - cy, pole.z);
                    const pTop = toIso(pole.x - cx, pole.y - cy, pole.z + params.mountHeight - 0.5);
                    const pLight = toIso(pole.lightX - cx, pole.lightY - cy, pole.z + params.mountHeight);

                    ctx.strokeStyle = 'rgba(0, 0, 0, 0.3)';
                    ctx.lineWidth = 5;
                    ctx.beginPath();
                    ctx.moveTo(pBase.x + 2, pBase.y + 2);
                    ctx.lineTo(pTop.x + 2, pTop.y + 2);
                    ctx.stroke();

                    ctx.strokeStyle = '#475569';
                    ctx.lineWidth = 4;
                    ctx.beginPath();
                    ctx.moveTo(pBase.x, pBase.y);
                    ctx.lineTo(pTop.x, pTop.y);
                    ctx.stroke();
                    
                    ctx.strokeStyle = '#64748b';
                    ctx.lineWidth = 2;
                    ctx.beginPath();
                    ctx.moveTo(pBase.x, pBase.y);
                    ctx.lineTo(pTop.x, pTop.y);
                    ctx.stroke();

                    ctx.strokeStyle = '#475569';
                    ctx.lineWidth = 3;
                    ctx.beginPath();
                    ctx.moveTo(pTop.x, pTop.y);
                    ctx.lineTo(pLight.x, pLight.y);
                    ctx.stroke();
                    
                    ctx.strokeStyle = '#64748b';
                    ctx.lineWidth = 1.5;
                    ctx.beginPath();
                    ctx.moveTo(pTop.x, pTop.y);
                    ctx.lineTo(pLight.x, pLight.y);
                    ctx.stroke();

                    const grad = ctx.createRadialGradient(pLight.x, pLight.y, 0, pLight.x, pLight.y, 25);
                    grad.addColorStop(0, 'rgba(255, 240, 150, 0.9)');
                    grad.addColorStop(0.3, 'rgba(255, 200, 80, 0.4)');
                    grad.addColorStop(0.6, 'rgba(255, 180, 50, 0.1)');
                    grad.addColorStop(1, 'rgba(255, 150, 0, 0)');
                    ctx.fillStyle = grad;
                    ctx.beginPath();
                    ctx.arc(pLight.x, pLight.y, 25, 0, Math.PI * 2);
                    ctx.fill();

                    ctx.fillStyle = '#fef3c7';
                    ctx.beginPath();
                    ctx.arc(pLight.x, pLight.y, 5, 0, Math.PI * 2);
                    ctx.fill();
                    
                    ctx.fillStyle = '#fbbf24';
                    ctx.beginPath();
                    ctx.arc(pLight.x, pLight.y, 3, 0, Math.PI * 2);
                    ctx.fill();
                }
            }

            let segStart = 0;
            segments.forEach((seg, idx) => {
                const midDist = segStart + seg.length / 2;
                let pathIdx = 0;
                let runningDist = 0;
                for (let i = 1; i < roadPath.length; i++) {
                    const dx = roadPath[i].x - roadPath[i-1].x;
                    const dy = roadPath[i].y - roadPath[i-1].y;
                    runningDist += Math.sqrt(dx*dx + dy*dy);
                    if (runningDist >= midDist) { pathIdx = i; break; }
                }
                const p = roadPath[Math.min(pathIdx, roadPath.length - 1)];
                const pt = toIso(p.x - cx, p.y - cy, p.z + params.mountHeight + 5);
                
                const label = `S${idx + 1}`;
                ctx.font = 'bold 11px Inter, system-ui';
                const metrics = ctx.measureText(label);
                
                if (idx === selectedSegment) {
                    ctx.fillStyle = 'rgba(59, 130, 246, 0.95)';
                } else {
                    ctx.fillStyle = 'rgba(30, 41, 59, 0.9)';
                }
                ctx.beginPath();
                ctx.roundRect(pt.x - metrics.width/2 - 6, pt.y - 8, metrics.width + 12, 16, 4);
                ctx.fill();
                
                ctx.strokeStyle = idx === selectedSegment ? 'rgba(96, 165, 250, 0.5)' : 'rgba(71, 85, 105, 0.5)';
                ctx.lineWidth = 1;
                ctx.stroke();
                
                ctx.fillStyle = '#fff';
                ctx.textAlign = 'center';
                ctx.fillText(label, pt.x, pt.y + 4);
                
                segStart += seg.length;
            });

            drawLegend(maxLux);
        }

        function drawLegend(maxLux) {
            const x = canvas.width - 90;
            const y = 20;
            const w = 16;
            const h = 100;
            
            ctx.fillStyle = 'rgba(15, 23, 42, 0.9)';
            ctx.strokeStyle = 'rgba(71, 85, 105, 0.3)';
            ctx.lineWidth = 1;
            ctx.beginPath();
            ctx.roundRect(x - 35, y - 8, 80, h + 45, 8);
            ctx.fill();
            ctx.stroke();
            
            const grad = ctx.createLinearGradient(x, y + h, x, y);
            for (let i = 0; i <= 10; i++) {
                const t = i / 10;
                const color = luxToColor(t * maxLux, maxLux);
                grad.addColorStop(t, `rgb(${color.r}, ${color.g}, ${color.b})`);
            }
            
            ctx.fillStyle = grad;
            ctx.beginPath();
            ctx.roundRect(x, y, w, h, 3);
            ctx.fill();
            
            ctx.strokeStyle = 'rgba(255,255,255,0.2)';
            ctx.lineWidth = 1;
            ctx.stroke();
            
            ctx.fillStyle = '#e2e8f0';
            ctx.font = '10px Inter, system-ui';
            ctx.textAlign = 'left';
            ctx.fillText(`${maxLux.toFixed(1)}`, x + w + 6, y + 4);
            ctx.fillText(`${(maxLux/2).toFixed(1)}`, x + w + 6, y + h/2 + 3);
            ctx.fillText('0', x + w + 6, y + h + 3);
            
            ctx.fillStyle = '#64748b';
            ctx.textAlign = 'center';
            ctx.font = '9px Inter, system-ui';
            ctx.fillText('foot-candles', x + w/2 + 10, y + h + 25);
        }

        function analyze(grid) {
            const flat = grid.flat().map(p => p.lux);
            const sum = flat.reduce((a, b) => a + b, 0);
            const avg = sum / flat.length;
            const min = Math.min(...flat);
            const max = Math.max(...flat);
            return {
                avg: Math.round(avg * 100) / 100,
                min: Math.round(min * 100) / 100,
                max: Math.round(max * 100) / 100,
                u0: Math.round((min / avg) * 100) / 100
            };
        }

        function updateUI(results, poles, roadClass, totalLength) {
            document.getElementById('totalLength').textContent = Math.round(totalLength);
            document.getElementById('avgLux').textContent = results.avg.toFixed(2);
            document.getElementById('minLux').textContent = results.min.toFixed(2);
            document.getElementById('maxLux').textContent = results.max.toFixed(2);
            document.getElementById('uniformity').textContent = results.u0.toFixed(2);
            document.getElementById('poleCount').textContent = poles.length;

            const std = standards[roadClass];
            
            document.getElementById('checkReq1').textContent = std.eavg + ' fc';
            document.getElementById('checkReq2').textContent = std.emin + ' fc';
            document.getElementById('checkReq3').textContent = std.u0;
            
            const checks = [
                { pass: results.avg >= std.eavg, val: results.avg.toFixed(2) + ' fc' },
                { pass: results.min >= std.emin, val: results.min.toFixed(2) + ' fc' },
                { pass: results.u0 >= std.u0, val: results.u0.toFixed(2) }
            ];

            checks.forEach((c, i) => {
                const el = document.getElementById(`check${i + 1}`);
                el.className = `px-3 py-1.5 rounded-lg text-xs font-medium flex items-center gap-2 transition-all ${c.pass ? 'compliance-pass' : 'compliance-fail'}`;
                document.getElementById(`checkVal${i + 1}`).textContent = c.val;
                document.getElementById(`checkIcon${i + 1}`).textContent = c.pass ? '✓' : '✗';
            });

            const allPass = checks.every(c => c.pass);
            const badge = document.getElementById('complianceBadge');
            const icon = document.getElementById('complianceIcon');
            const text = document.getElementById('complianceText');
            
            badge.className = `px-4 py-1.5 rounded-full text-xs font-bold flex items-center gap-1.5 transition-all ${allPass ? 'bg-emerald-500/20 text-emerald-400 border border-emerald-500/30' : 'bg-red-500/20 text-red-400 border border-red-500/30'}`;
            icon.textContent = allPass ? '✓' : '✗';
            text.textContent = allPass ? 'IES RP-8 Compliant' : 'Non-Compliant';
        }

        function updateDisplays() {
            document.getElementById('roadWidthVal').textContent = document.getElementById('roadWidth').value + ' ft';
            document.getElementById('crownVal').textContent = parseFloat(document.getElementById('crown').value).toFixed(1) + '%';
            document.getElementById('poleSpacingVal').textContent = document.getElementById('poleSpacing').value + ' ft';
            document.getElementById('mountHeightVal').textContent = document.getElementById('mountHeight').value + ' ft';
            document.getElementById('armLengthVal').textContent = document.getElementById('armLength').value + ' ft';
            document.getElementById('lumensVal').textContent = parseInt(document.getElementById('lumens').value).toLocaleString() + ' lm';
            document.getElementById('beamAngleVal').textContent = document.getElementById('beamAngle').value + '°';
            document.getElementById('maintenanceFactorVal').textContent = parseFloat(document.getElementById('maintenanceFactor').value).toFixed(2);
            document.getElementById('meshScaleVal').textContent = document.getElementById('meshScale').value + '%';
        }

        function renderSegmentList() {
            const list = document.getElementById('segmentList');
            list.innerHTML = segments.map((seg, i) => `
                <div class="segment-item ${i === selectedSegment ? 'active' : ''}" data-index="${i}">
                    <div class="flex justify-between items-center text-xs">
                        <span class="font-semibold text-white">Segment ${i + 1}</span>
                        <span class="text-blue-400 font-medium">${seg.length} ft</span>
                    </div>
                    <div class="text-[10px] text-slate-500 mt-1">
                        ${seg.type === 'curve' ? `Curve R${seg.radius}ft ${seg.direction}` : 'Straight'} 
                        ${seg.gradeIn !== 0 || seg.gradeOut !== 0 ? `• Grade ${seg.gradeIn}%→${seg.gradeOut}%` : ''}
                    </div>
                </div>
            `).join('');

            list.querySelectorAll('.segment-item').forEach(el => {
                el.addEventListener('click', () => {
                    selectedSegment = parseInt(el.dataset.index);
                    renderSegmentList();
                    updateSegmentEditor();
                    draw();
                });
            });
        }

        function updateSegmentEditor() {
            const seg = segments[selectedSegment];
            if (!seg) {
                document.getElementById('noSegmentMsg').classList.remove('hidden');
                document.getElementById('segmentControls').classList.add('hidden');
                return;
            }
            
            document.getElementById('noSegmentMsg').classList.add('hidden');
            document.getElementById('segmentControls').classList.remove('hidden');
            
            document.getElementById('segType').value = seg.type;
            document.getElementById('segLength').value = seg.length;
            document.getElementById('segGradeIn').value = seg.gradeIn;
            document.getElementById('segGradeOut').value = seg.gradeOut;
            
            const curveControls = document.getElementById('curveControls');
            if (seg.type === 'curve') {
                curveControls.classList.remove('hidden');
                document.getElementById('segRadius').value = seg.radius || 300;
                document.getElementById('segDirection').value = seg.direction || 'left';
            } else {
                curveControls.classList.add('hidden');
            }
        }

        function calculate() {
            updateDisplays();
            const params = getParams();
            const roadPath = buildRoadPath(segments, 1);
            const poles = getPoles(roadPath, params);
            const grid = calcGrid(roadPath, params, poles);
            const results = analyze(grid);
            const totalLength = segments.reduce((s, seg) => s + seg.length, 0);

            cache = { roadPath, poles, grid, params };
            draw();
            updateUI(results, poles, params.roadClass, totalLength);
            
            return { results, poles, params };
        }

        // Optimization function - Only adjusts pole/luminaire settings, NOT roadway geometry
        async function optimizeDesign() {
            if (isOptimizing) return;
            
            isOptimizing = true;
            const btn = document.getElementById('optimizeBtn');
            const btnText = document.getElementById('optimizeBtnText');
            const icon = document.getElementById('optimizeIcon');
            
            btn.disabled = true;
            btn.classList.add('optimizing');
            btnText.textContent = 'Analyzing...';
            icon.innerHTML = '<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>';
            icon.classList.add('spin');
            
            // Get current fixed parameters (roadway geometry - these don't change)
            const roadClass = document.getElementById('roadClass').value;
            const std = standards[roadClass];
            const roadWidth = +document.getElementById('roadWidth').value;
            const lanes = +document.getElementById('lanes').value;
            const crown = +document.getElementById('crown').value;
            
            // Pre-compute the road path once (geometry is fixed)
            const roadPath = buildRoadPath(segments, 2);
            
            // Optimization parameters to try (ONLY pole and luminaire settings)
            const arrangements = ['opposite', 'staggered', 'single'];
            const spacings = [50, 60, 70, 80, 90, 100, 110, 120, 140, 160, 180, 200];
            const heights = [20, 25, 30, 35, 40, 45, 50];
            const armLengths = [0, 2, 4, 6, 8, 10, 12];
            const lumensOptions = [5000, 10000, 15000, 20000, 25000, 30000, 35000, 40000, 45000, 50000];
            const beamAngles = [60, 80, 100, 120, 140];
            const maintenanceFactors = [0.7, 0.75, 0.8, 0.85, 0.9];
            
            let bestConfig = null;
            let bestScore = -Infinity;
            let iterations = 0;
            let compliantCount = 0;
            
            // Calculate total iterations for progress
            const totalIterations = arrangements.length * spacings.length * heights.length * lumensOptions.length;
            
            // Get current display settings (these stay the same)
            const currentParams = getParams();
            const displaySettings = {
                showMesh: currentParams.showMesh,
                showPoles: currentParams.showPoles,
                showLightCones: currentParams.showLightCones,
                showGrid: currentParams.showGrid,
                meshScale: currentParams.meshScale
            };
            
            // Phase 1: Coarse search - find compliant configurations
            for (const arrangement of arrangements) {
                for (const spacing of spacings) {
                    for (const height of heights) {
                        for (const lumens of lumensOptions) {
                            iterations++;
                            
                            // Update progress
                            if (iterations % 100 === 0) {
                                const pct = Math.round(iterations / totalIterations * 100);
                                btnText.textContent = `Searching ${pct}%...`;
                                await new Promise(r => setTimeout(r, 0));
                            }
                            
                            // Use middle-ground values for arm length, beam angle, maintenance factor in coarse search
                            const testParams = {
                                roadWidth,
                                lanes,
                                roadClass,
                                crown,
                                poleSpacing: spacing,
                                mountHeight: height,
                                armLength: 6,
                                arrangement,
                                lumens,
                                beamAngle: 120,
                                maintenanceFactor: 0.8,
                                ...displaySettings
                            };
                            
                            const poles = getPoles(roadPath, testParams);
                            const grid = calcGrid(roadPath, testParams, poles);
                            const results = analyze(grid);
                            
                            // Check if compliant
                            const isCompliant = results.avg >= std.eavg && 
                                               results.min >= std.emin && 
                                               results.u0 >= std.u0;
                            
                            if (isCompliant) {
                                compliantCount++;
                                
                                // Score: minimize cost while maintaining good compliance margins
                                // Higher score is better
                                
                                // Cost factors (lower is better, so we subtract)
                                const poleCost = poles.length * 5; // Each pole costs points
                                const energyCost = (lumens / 5000); // Energy usage
                                const heightCost = (height - 20) * 0.5; // Taller poles cost more
                                
                                // Benefit factors (higher is better)
                                const uniformityBonus = results.u0 * 100; // Good uniformity
                                const avgMargin = Math.min(((results.avg - std.eavg) / std.eavg) * 30, 30);
                                const minMargin = Math.min(((results.min - std.emin) / std.emin) * 30, 30);
                                const spacingBonus = (spacing / 50) * 10; // Prefer wider spacing (fewer poles)
                                
                                const score = uniformityBonus + avgMargin + minMargin + spacingBonus - poleCost - energyCost - heightCost;
                                
                                if (score > bestScore) {
                                    bestScore = score;
                                    bestConfig = { 
                                        arrangement, 
                                        poleSpacing: spacing, 
                                        mountHeight: height, 
                                        lumens,
                                        armLength: 6,
                                        beamAngle: 120,
                                        maintenanceFactor: 0.8
                                    };
                                }
                            }
                        }
                    }
                }
            }
            
            // Phase 2: Fine-tune the best configuration if found
            if (bestConfig) {
                btnText.textContent = 'Fine-tuning...';
                await new Promise(r => setTimeout(r, 0));
                
                // Fine-tune arm length, beam angle, and maintenance factor
                for (const armLength of armLengths) {
                    for (const beamAngle of beamAngles) {
                        for (const mf of maintenanceFactors) {
                            const testParams = {
                                roadWidth,
                                lanes,
                                roadClass,
                                poleSpacing: bestConfig.poleSpacing,
                                mountHeight: bestConfig.mountHeight,
                                armLength,
                                arrangement: bestConfig.arrangement,
                                lumens: bestConfig.lumens,
                                beamAngle,
                                maintenanceFactor: mf,
                                ...displaySettings
                            };
                            
                            const poles = getPoles(roadPath, testParams);
                            const grid = calcGrid(roadPath, testParams, poles);
                            const results = analyze(grid);
                            
                            const isCompliant = results.avg >= std.eavg && 
                                               results.min >= std.emin && 
                                               results.u0 >= std.u0;
                            
                            if (isCompliant) {
                                const poleCost = poles.length * 5;
                                const energyCost = (bestConfig.lumens / 5000);
                                const uniformityBonus = results.u0 * 100;
                                const avgMargin = Math.min(((results.avg - std.eavg) / std.eavg) * 30, 30);
                                const minMargin = Math.min(((results.min - std.emin) / std.emin) * 30, 30);
                                const spacingBonus = (bestConfig.poleSpacing / 50) * 10;
                                
                                const score = uniformityBonus + avgMargin + minMargin + spacingBonus - poleCost - energyCost;
                                
                                if (score > bestScore) {
                                    bestScore = score;
                                    bestConfig.armLength = armLength;
                                    bestConfig.beamAngle = beamAngle;
                                    bestConfig.maintenanceFactor = mf;
                                }
                            }
                        }
                    }
                }
            }
            
            // Apply best configuration
            if (bestConfig) {
                // Update all the UI controls
                document.getElementById('poleSpacing').value = bestConfig.poleSpacing;
                document.getElementById('mountHeight').value = bestConfig.mountHeight;
                document.getElementById('armLength').value = bestConfig.armLength;
                document.getElementById('arrangement').value = bestConfig.arrangement;
                document.getElementById('lumens').value = bestConfig.lumens;
                document.getElementById('beamAngle').value = bestConfig.beamAngle;
                document.getElementById('maintenanceFactor').value = bestConfig.maintenanceFactor;
                
                calculate();
                btnText.textContent = `✓ Optimized (${compliantCount} solutions found)`;
                btn.style.background = 'linear-gradient(135deg, #10b981, #059669)';
            } else {
                // No compliant solution found - apply maximum settings and notify user
                btnText.textContent = 'Maximizing...';
                await new Promise(r => setTimeout(r, 100));
                
                // Use maximum settings to get as close as possible
                document.getElementById('poleSpacing').value = 50;
                document.getElementById('mountHeight').value = 45;
                document.getElementById('armLength').value = 8;
                document.getElementById('arrangement').value = 'opposite';
                document.getElementById('lumens').value = 50000;
                document.getElementById('beamAngle').value = 120;
                document.getElementById('maintenanceFactor').value = 0.9;
                
                calculate();
                btnText.textContent = '⚠ No compliant solution';
                btn.style.background = 'linear-gradient(135deg, #f59e0b, #d97706)';
            }
            
            // Reset button after delay
            setTimeout(() => {
                btn.disabled = false;
                btn.classList.remove('optimizing');
                btnText.textContent = 'Auto-Optimize';
                icon.classList.remove('spin');
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>';
                btn.style.background = '';
                isOptimizing = false;
            }, 3000);
        }

        function resize() {
            const rect = canvas.parentElement.getBoundingClientRect();
            canvas.width = rect.width;
            canvas.height = rect.height - 60;
            draw();
        }

        // Event listeners
        canvas.addEventListener('mousedown', e => {
            isDragging = true;
            lastMouse = { x: e.clientX, y: e.clientY };
            isShiftKey = e.shiftKey;
        });

        canvas.addEventListener('mousemove', e => {
            if (!isDragging) return;
            const dx = e.clientX - lastMouse.x;
            const dy = e.clientY - lastMouse.y;
            
            if (e.shiftKey || isShiftKey) {
                view.panX += dx;
                view.panY += dy;
            } else {
                view.rotY += dx * 0.005;
                view.rotX += dy * 0.005;
                view.rotX = Math.max(0.1, Math.min(1.4, view.rotX));
            }
            
            lastMouse = { x: e.clientX, y: e.clientY };
            draw();
        });

        canvas.addEventListener('mouseup', () => isDragging = false);
        canvas.addEventListener('mouseleave', () => isDragging = false);

        canvas.addEventListener('wheel', e => {
            e.preventDefault();
            const factor = e.ctrlKey ? 0.02 : 0.1;
            const delta = e.deltaY > 0 ? (1 - factor) : (1 + factor);
            view.zoom = Math.max(0.5, Math.min(10, view.zoom * delta));
            draw();
        }, { passive: false });

        // Touch controls
        let lastTouch = null, lastTouchDist = null;
        canvas.addEventListener('touchstart', e => {
            if (e.touches.length === 1) {
                lastTouch = { x: e.touches[0].clientX, y: e.touches[0].clientY };
            } else if (e.touches.length === 2) {
                const dx = e.touches[0].clientX - e.touches[1].clientX;
                const dy = e.touches[0].clientY - e.touches[1].clientY;
                lastTouchDist = Math.sqrt(dx * dx + dy * dy);
            }
        });
        canvas.addEventListener('touchmove', e => {
            e.preventDefault();
            if (e.touches.length === 1 && lastTouch) {
                const dx = e.touches[0].clientX - lastTouch.x;
                const dy = e.touches[0].clientY - lastTouch.y;
                view.rotY += dx * 0.005;
                view.rotX += dy * 0.005;
                view.rotX = Math.max(0.1, Math.min(1.4, view.rotX));
                lastTouch = { x: e.touches[0].clientX, y: e.touches[0].clientY };
                draw();
            } else if (e.touches.length === 2) {
                const dx = e.touches[0].clientX - e.touches[1].clientX;
                const dy = e.touches[0].clientY - e.touches[1].clientY;
                const dist = Math.sqrt(dx * dx + dy * dy);
                if (lastTouchDist) {
                    view.zoom = Math.max(0.5, Math.min(10, view.zoom * (dist / lastTouchDist)));
                    draw();
                }
                lastTouchDist = dist;
            }
        }, { passive: false });
        canvas.addEventListener('touchend', () => { lastTouch = null; lastTouchDist = null; });

        // View buttons
        document.getElementById('resetView').addEventListener('click', () => {
            view = { rotX: 0.5, rotY: 0.4, zoom: 2.5, panX: 0, panY: 0 };
            draw();
        });
        
        document.getElementById('topView').addEventListener('click', () => {
            view = { rotX: 1.4, rotY: 0, zoom: 2, panX: 0, panY: 0 };
            draw();
        });

        // Optimize button
        document.getElementById('optimizeBtn').addEventListener('click', optimizeDesign);

        // Segment controls
        document.getElementById('addSegment').addEventListener('click', () => {
            segments.push({ type: 'straight', length: 100, gradeIn: 0, gradeOut: 0 });
            selectedSegment = segments.length - 1;
            renderSegmentList();
            updateSegmentEditor();
            calculate();
        });

        document.getElementById('deleteSegment').addEventListener('click', () => {
            if (segments.length > 1) {
                segments.splice(selectedSegment, 1);
                selectedSegment = Math.max(0, selectedSegment - 1);
                renderSegmentList();
                updateSegmentEditor();
                calculate();
            }
        });

        document.getElementById('segType').addEventListener('change', e => {
            segments[selectedSegment].type = e.target.value;
            if (e.target.value === 'curve') {
                segments[selectedSegment].radius = 300;
                segments[selectedSegment].direction = 'left';
            }
            updateSegmentEditor();
            renderSegmentList();
            calculate();
        });

        ['segLength', 'segRadius', 'segGradeIn', 'segGradeOut'].forEach(id => {
            document.getElementById(id).addEventListener('input', e => {
                const seg = segments[selectedSegment];
                if (id === 'segLength') seg.length = +e.target.value;
                if (id === 'segRadius') seg.radius = +e.target.value;
                if (id === 'segGradeIn') seg.gradeIn = +e.target.value;
                if (id === 'segGradeOut') seg.gradeOut = +e.target.value;
                renderSegmentList();
                calculate();
            });
        });

        document.getElementById('segDirection').addEventListener('change', e => {
            segments[selectedSegment].direction = e.target.value;
            renderSegmentList();
            calculate();
        });

        // View-only options
        ['showMesh', 'showPoles', 'showLightCones', 'showGrid', 'meshScale'].forEach(id => {
            document.getElementById(id).addEventListener('input', () => {
                cache.params = getParams();
                updateDisplays();
                draw();
            });
        });

        // Full recalc options
        ['roadWidth', 'lanes', 'roadClass', 'crown', 'poleSpacing', 'mountHeight', 'armLength', 'arrangement', 'lumens', 'beamAngle', 'maintenanceFactor'].forEach(id => {
            document.getElementById(id).addEventListener('input', calculate);
        });

        window.addEventListener('resize', resize);

        // Init
        resize();
        renderSegmentList();
        updateSegmentEditor();
        calculate();
    </script>
</body>
</html>
